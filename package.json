{
  "name": "siiges-services",
  "workspaces": [
    "packages/*"
  ],
  "version": "1.0.0",
  "description": "This monorepo is for the managing of backend services",
  "main": "src/index.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/subsesjal/siiges-services.git"
  },
  "scripts": {
    "seeds:run": "cd packages/core && sequelize-cli db:seed:all --debug",
    "migrations:run": "cd packages/core && sequelize-cli db:migrate",
    "start:dev": "yarn migrations:run && yarn seeds:run && node packages/api-gateway/src/index.js",
    "bootstrap": "yarn install -W && lerna bootstrap",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "jest",
    "test:watch": "jest --watch",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@faker-js/faker": "^7.3.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "lerna": "5.1.6",
    "nodemon": "^2.0.19",
    "nx": "14.4.0",
    "sequelize-cli": "^6.4.1"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.0",
    "dotenv": "^16.0.1",
    "joi": "^17.6.0",
    "mysql2": "^2.3.3",
    "nx": "14.4.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "sequelize": "^6.21.3"
  }
}
